<?xml version="1.0" encoding="utf-8"?>

<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
      name="remark"
      type="banbutsu.kyoto.com.databindingemotioncounter.data.local.model.RemarkEntry"/>
  </data>
  <FrameLayout
    android:id="@+id/frame_balloon_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingStart="@dimen/edge16"
    android:paddingEnd="@dimen/edge16"
    android:background="@drawable/shape_balloon"
    >
    <TextView
      android:id="@+id/tv_item"
      style="@style/tv_balloon"
      android:text="@{remark.say}"
      tools:text="やあ、また会ったねベイビー？"
      />
  </FrameLayout>
</layout>