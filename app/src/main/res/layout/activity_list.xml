<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable
      name="remark"
      type="banbutsu.kyoto.com.databindingemotioncounter.ui.remarks.RemarksActivity"/>
  </data>
  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue02"
    tools:context="banbutsu.kyoto.com.databindingemotioncounter.ui.remarks.RemarksActivity">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_remark_list"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="@dimen/edge16"
      android:layout_marginEnd="@dimen/edge16"
      app:layoutManager="LinearLayoutManager"
      app:layout_constraintBottom_toTopOf="@+id/ll_emotion_btn_1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:listitem="@layout/rv_item_remark_list"/>
    <FrameLayout
      android:id="@+id/frame_btn_character"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:background="@color/keyboard_back"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/ll_emotion_btn_1">
      <ImageButton
        android:id="@+id/img_btn_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_white_woman_bob_shirt1"/>
    </FrameLayout>
    <LinearLayout
      android:id="@+id/ll_emotion_btn_1"
      style="@style/emotion_linear_layout"
      app:layout_constraintBottom_toTopOf="@+id/ll_emotion_btn_2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/frame_btn_character">
      <ImageButton
        android:id="@+id/img_button_trust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:onClick='@{() -> remark.displayRemarks(@string/trust)}'
        app:srcCompat="@drawable/ic_trust_to_left"
        />
      <ImageButton
        android:id="@+id/img_button_joy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:onClick='@{() -> remark.displayRemarks(@string/joy)}'
        app:srcCompat="@drawable/ic_face_joy_selected"
        />
      <ImageButton
        android:id="@+id/img_button_fear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:onClick='@{() -> remark.displayRemarks(@string/fear)}'
        app:srcCompat="@drawable/ic_fear_to_left"
        />
      <ImageButton
        android:id="@+id/img_button_sadness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:onClick='@{() -> remark.displayRemarks(@string/sadness)}'
        app:srcCompat="@drawable/ic_face_sadness_selected"
        />
      <ImageButton
        android:id="@+id/img_button_anger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:onClick='@{() -> remark.displayRemarks(@string/anger)}'
        app:srcCompat="@drawable/ic_anger_to_left"
        />
      <ImageButton
        android:id="@+id/img_button_disgust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:onClick='@{() -> remark.displayRemarks(@string/disgust)}'
        app:srcCompat="@drawable/ic_disgust_to_left"
        />
    </LinearLayout>
    <LinearLayout
      android:id="@+id/ll_emotion_btn_2"
      style="@style/emotion_linear_layout"
      android:orientation="horizontal"
      app:layout_constraintBottom_toTopOf="@+id/ll_emotion_btn_3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/frame_btn_character">
      <ImageButton
        android:id="@+id/img_button_anticipation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:onClick='@{() -> remark.displayRemarks(@string/anticipation)}'
        app:srcCompat="@drawable/ic_anticipation_to_left"
        />
      <ImageButton
        android:id="@+id/img_button_surprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:onClick='@{() -> remark.displayRemarks(@string/surprise)}'
        app:srcCompat="@drawable/ic_surprise_to_left"
        />
      <ImageButton
        android:id="@+id/img_button_libido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:onClick='@{() -> remark.displayRemarks(@string/libido)}'
        app:srcCompat="@drawable/ic_libido_to_left"
        />
      <ImageButton
        android:id="@+id/img_button_self_respect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:onClick='@{() -> remark.displayRemarks(@string/self_respect)}'
        app:srcCompat="@drawable/ic_face_self_respect_selected"
        />
      <ImageButton
        android:id="@+id/img_button_shame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:onClick='@{() -> remark.displayRemarks(@string/shame)}'
        app:srcCompat="@drawable/ic_face_shame_selected"
        />
      <Button
        android:id="@+id/img_button_nothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:onClick='@{() -> remark.displayRemarks(@string/nothing)}'
        android:text="無"
        />
    </LinearLayout>
    <LinearLayout
      android:id="@+id/ll_emotion_btn_3"
      style="@style/emotion_linear_layout"
      android:gravity="center"
      android:orientation="horizontal"
      app:layout_constraintBottom_toTopOf="@+id/ll_emotion_btn_4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">
      <Button
        android:id="@+id/img_button_optimism"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick='@{() -> remark.displayRemarks(@string/optimism)}'
        android:text="楽観"/>
      <Button
        android:id="@+id/img_button_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick='@{() -> remark.displayRemarks(@string/love)}'
        android:text="愛"/>
      <Button
        android:id="@+id/img_button_disappointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick='@{() -> remark.displayRemarks(@string/disappointment)}'
        android:text="失望"/>
      <Button
        android:id="@+id/img_button_remorse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick='@{() -> remark.displayRemarks(@string/remorse)}'
        android:text="後悔"/>
    </LinearLayout>
    <LinearLayout
      android:id="@+id/ll_emotion_btn_4"
      style="@style/emotion_linear_layout"
      android:gravity="center"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">
      <Button
        android:id="@+id/img_button_submission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick='@{() -> remark.displayRemarks(@string/submission)}'
        android:text="服従"/>
      <Button
        android:id="@+id/img_button_awe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick='@{() -> remark.displayRemarks(@string/awe)}'
        android:text="畏怖"/>
      <Button
        android:id="@+id/img_button_contempt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick='@{() -> remark.displayRemarks(@string/contempt)}'
        android:text="軽蔑"/>
      <Button
        android:id="@+id/img_button_aggressiveness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick='@{() -> remark.displayRemarks(@string/aggressiveness)}'
        android:text="攻撃性"/>
    </LinearLayout>
  </android.support.constraint.ConstraintLayout>
</layout>