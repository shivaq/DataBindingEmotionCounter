    <!--app:layout_constraintStart_toStartOf="@+id/tv_emotion1"-->
    <!--app:layout_constraintTop_toTopOf="@+id/character_right"-->
    <!--/>-->
    <TextView
      android:id="@+id/tv_mixed_emotion1"
      style="@style/tv_base"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="@+id/tv_plus1"
      app:layout_constraintStart_toStartOf="@+id/tv_plus1"
      app:layout_constraintTop_toBottomOf="@+id/tv_plus1"
      tools:text="(愛)"/>

    <!--////////////////////////////////////////////////////////-->
    <ImageView
      android:id="@+id/character_right"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_marginBottom="60dp"
      android:layout_marginEnd="@dimen/edge16"
      app:layout_constraintBottom_toBottomOf="@+id/ll_emo_btn_top"
      app:layout_constraintEnd_toEndOf="parent"
      app:srcCompat="@drawable/ic_white_woman_bob_shirt1"
      />
    <!--////////////////////////////////////////////////////////-->
    <LinearLayout
      android:id="@+id/ll_emo_btn_top"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal"
      app:layout_constraintBottom_toTopOf="@+id/ll_emo_btn_middle"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

      <ImageView
        android:id="@+id/img_trust"
        style="@style/emotion_button"
        android:onClick='@{() -> main.speak(@string/trust)}'
        app:srcCompat="@drawable/ic_trust_to_left"
        />
      <ImageView
        android:id="@+id/img_joy"
        style="@style/emotion_button"
        android:onClick='@{() -> main.speak(@string/joy)}'
        app:srcCompat="@drawable/ic_face_joy_selected"
        />

      <ImageView
        android:id="@+id/img_fear"
        style="@style/emotion_button"
        android:onClick='@{() -> main.speak(@string/fear)}'
        app:srcCompat="@drawable/ic_fear_to_left"
        />

      <ImageView
        android:id="@+id/img_sadness"
        style="@style/emotion_button"
        android:onClick='@{() -> main.speak(@string/sadness)}'
        app:srcCompat="@drawable/ic_face_sadness_selected"
        />
    </LinearLayout>

    <!--////////////////////////////////////////////////////////-->
    <LinearLayout
      android:id="@+id/ll_emo_btn_middle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal"
      app:layout_constraintBottom_toTopOf="@+id/ll_emo_btn_bottom"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">
      <ImageView
        android:id="@+id/img_anger"
        style="@style/emotion_button"
        android:onClick='@{() -> main.speak(@string/anger)}'
        app:srcCompat="@drawable/ic_anger_to_left"
        />

      <ImageView
        android:id="@+id/img_disgust"
        style="@style/emotion_button"
        android:onClick='@{() -> main.speak(@string/disgust)}'
        app:srcCompat="@drawable/ic_disgust_to_left"
        />

      <ImageView
        android:id="@+id/img_anticipation"
        style="@style/emotion_button"
        android:onClick='@{() -> main.speak(@string/anticipation)}'
        app:srcCompat="@drawable/ic_anticipation_to_left"
        />

      <ImageView
        android:id="@+id/img_surprise"
        style="@style/emotion_button"
        android:onClick='@{() -> main.speak(@string/surprise)}'
        app:srcCompat="@drawable/ic_surprise_to_left"
        />
    </LinearLayout>

    <!--////////////////////////////////////////////////////////-->
    <LinearLayout
      android:id="@+id/ll_emo_btn_bottom"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/top_bottom8"
      android:gravity="center"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">
      <ImageView
        android:id="@+id/img_libido"
        style="@style/emotion_button"
        android:onClick='@{() -> main.speak(@string/libido)}'
        app:srcCompat="@drawable/ic_libido_to_left"
        />
      <!--<ImageButton-->
      <!--android:id="@+id/img_libido"-->
      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:layout_marginBottom="@dimen/top_bottom8"-->
      <!--android:paddingBottom="16dp"-->
      <!--app:layout_constraintBottom_toBottomOf="parent"-->
      <!--app:layout_constraintEnd_toStartOf="@+id/img_self_respect"-->
      <!--app:layout_constraintStart_toStartOf="parent"-->
      <!--app:srcCompat="@drawable/ic_libido_to_left"-->
      <!--/>-->
      <ImageView
        android:id="@+id/img_self_respect"
        style="@style/emotion_button"
        android:onClick='@{() -> main.speak(@string/self_respect)}'
        app:srcCompat="@drawable/ic_face_self_respect_selected"
        />

      <ImageView
        android:id="@+id/img_shame"
        style="@style/emotion_button"

        android:onClick='@{() -> main.speak(@string/shame)}'
        app:srcCompat="@drawable/ic_face_shame_selected"
        />

      <TextView
        android:id="@+id/tv_nothing"
        style="@style/emotion_button"
        android:paddingTop="@dimen/edge16"
        android:onClick='@{() -> main.speak(@string/nothing)}'
        android:text="無"
        android:textAlignment="center"
        android:textSize="50sp"
        />
    </LinearLayout>

  </android.support.constraint.ConstraintLayout>
</layout>